
<h1>New Product!</h1>
<%= form_for @product do |f| %>
  <p>
    <%= f.label :category %>
    <%= f.collection_select :category_id, @categories, :id, :name%>
  </p>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :img_src %>
    <%= f.text_field :img_src %>
  </p>
  <%= submit_tag "Go", class: "ui button primary" %>
<% end %>
